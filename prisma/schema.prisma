generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  phone    Decimal
  email    String  @unique
  password String

  street String
  city   String
  state  String
  cep    String
  number Decimal

  created_at DateTime @default(now())
  update_at  DateTime @default(now())

  @@map("users")
}

model categories {
  id                  String                @id @default(uuid())
  name                String
  products_categories products_categories[]
}

model products {
  id                  String                @id @default(uuid())
  name                String
  bar_code            String                @unique
  price               Decimal
  imagem              String[]
  size                String[]
  color               String[]
  slug                String                @unique
  description         String
  quantity            Decimal
  created_at          DateTime              @default(now())
  products_categories products_categories[]
}

model products_categories {
  id          String     @id @default(uuid())
  id_product  String
  id_category String
  categories  categories @relation(fields: [id_category], references: [id])
  products    products   @relation(fields: [id_product], references: [id])
}
