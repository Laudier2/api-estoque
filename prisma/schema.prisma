generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  phone    Decimal
  email    String  @unique
  password String

  street             String
  city               String
  state              String
  cep                String
  number             Decimal
  district           String
  apartment_or_house String

  created_at      DateTime          @default(now())
  update_at       DateTime          @default(now())
  RelationsAdress RelationsAdress[]

  @@map("users")
}

model Adress2 {
  id                 String   @id @default(uuid())
  street             String?
  city               String?
  state              String?
  cep                String?
  number             Decimal?
  district           String?
  apartment_or_house String?

  created_at      DateTime          @default(now())
  update_at       DateTime          @default(now())
  RelationsAdress RelationsAdress[]

  @@map("adresses2")
}

model RelationsAdress {
  id        String  @id @default(uuid())
  id_user   String
  id_adress String
  user      User    @relation(fields: [id_user], references: [id])
  adress2   Adress2 @relation(fields: [id_adress], references: [id])
}

model categories {
  id                  String                @id @default(uuid())
  name                String
  products_categories products_categories[]
}

model products {
  id                  String                @id @default(uuid())
  name                String
  bar_code            String                @unique
  price               Decimal
  imagem              String[]
  size                String[]
  color               String[]
  slug                String                @unique
  description         String
  quantity            Decimal
  created_at          DateTime              @default(now())
  products_categories products_categories[]
}

model products_categories {
  id          String     @id @default(uuid())
  id_product  String
  id_category String
  categories  categories @relation(fields: [id_category], references: [id])
  products    products   @relation(fields: [id_product], references: [id])
}
